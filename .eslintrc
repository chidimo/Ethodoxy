{
    "env": {
        "browser": true,
        "es6": true,
      },
      "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
      },
    "plugins" : ["react"],
    "extends" : [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],

    "parser": "babel-eslint",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-indent": ["error", 4],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": 1,
      },
}
